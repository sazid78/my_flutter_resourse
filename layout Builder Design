LayoutBuilder(
          builder: (BuildContext context, BoxConstraints constraints){
            if(constraints.maxWidth>600){
              return Container(
                height: 400,
                  width: 400,
                color: Colors.orangeAccent,
              );
            }else{
              return Container(
                height: 200,
                width: 200,
                color: Colors.purpleAccent,
              );
            }
          }
      )
